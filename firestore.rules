// NOTE: These rules are for reference only. 
// Production rules are managed through Firebase Console.
// Make sure to sync any changes with Firebase Console deployment.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile  
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow read access for public profile viewing
      allow read: if request.auth != null;
    }
    
    // Username reservations - users can create and manage their own username
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Frames - users can create and manage their own frames
    match /frames/{frameId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // All other documents require authentication but are read-only by default
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}